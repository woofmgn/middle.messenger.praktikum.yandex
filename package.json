{
  "name": "middle.messenger.praktikum.yandex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "start": "tsc && vite build && vite preview --port 3000",
    "build": "tsc && vite build",
    "lint:ts": "eslint . && tsc --noEmit",
    "lint:ts:fix": "eslint . --fix",
    "lint:style": "stylelint **/*.scss",
    "lint:style:fix": "stylelint **/*.scss --fix",
    "test": "mocha",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.8.4",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "chai": "^5.1.2",
    "eslint": "^8.57.1",
    "eslint-plugin-prettier": "^5.2.1",
    "handlebars": "^4.7.8",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.3.0",
    "mocha": "^11.0.1",
    "path": "^0.12.7",
    "prettier": "^3.3.3",
    "sinon": "^19.0.2",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-prettier": "^5.0.2",
    "stylelint-scss": "^6.8.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.2",
    "vite": "^5.4.9"
  },
  "dependencies": {
    "sass": "^1.80.5",
    "uuid": "^11.0.3"
  }
}
